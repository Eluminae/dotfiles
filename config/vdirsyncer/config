[storage personal_calendar_remote]
type = "caldav"
url = "https://nextcloud.misterbanal.net/remote.php/dav"
username = "ReedWade"
password.fetch = ["command", "{{@@ env['HOME'] @@}}/bin/passfirst", "Web/nextcloud.misterbanal.net/ReedWade"]

