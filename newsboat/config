notify-program "/usr/bin/notify-send"
refresh-on-startup yes
browser "xdg-open"
auto-reload yes
reload-time 5

color info white blue
color listfocus white blue
color listfocus_unread white blue

# unbind keys
unbind-key o

# bind keys - vim style
bind-key ^O open-in-browser
bind-key z random-unread
bind-key j down
bind-key k up
bind-key - quit
bind-key ^F pagedown
bind-key ^B pageup
bind-key g home
bind-key G end
