[general]
accounts = contact_personal
pythonfile = ~/.offlineimap.py
maxsyncaccounts = 1

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account contact_personal]
localrepository = contact_personal-local
remoterepository = contact_personal-remote
autorefresh = 0.5
quick = 10

[Repository contact_personal-local]
type = Maildir
localfolders = ~/.mails/contact_personal

[Repository contact_personal-remote]
type = IMAP
remotehost = mail.misterbanal.net
remoteuser = contact@eddiebarraco.fr
remotepasseval = get_pass("db/Email/Contact/contact@eddiebarraco.fr")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
keepalive = 60
holdconnectionopen = yes

