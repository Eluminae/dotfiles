[Account ubitransport]
localrepository = ubitransport-local
remoterepository = ubitransport-remote
autorefresh = 0.5
quick = 10

[Repository ubitransport-local]
type = Maildir
localfolders = ~/.mails/ubitransport

[Repository ubitransport-remote]
type = IMAP
remotehost = imap.gmail.com
remoteuser = e.barraco@ubitransport.com
remotepasseval = get_pass("db/Ubitransport/Google")
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
keepalive = 60
holdconnectionopen = yes
ssl_version = tls1_2
nametrans = lambda foldername: re.sub ('^\[Gmail\].', '',
                               re.sub ('Messages_envoy&AOk-s', 'Messages_envoy√©s',
                               re.sub (' ', '_', foldername)))
folderfilter = lambda foldername: foldername not in ['[Gmail]/Tous les messages', '[Gmail]/Important']
